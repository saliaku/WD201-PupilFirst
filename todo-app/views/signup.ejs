<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do Signup</title>
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function  updateTodo(id){
            fetch(`/todos/${id}/markAsCompleted`, {

                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if(response.ok){
                    window.location.reload();
                }
            }).catch(error => {
                console.error( error);
            });
        }

        function deleteTodo(id){
            fetch(`/todos/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if(response.ok){
                    window.location.reload();
                }
            }).catch(error => {
                console.error( error);
            });
        }
    </script>
</head>
<body>

    <div class="grid grid-cols-6">
        <divc class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
    </div>

    <h6 class="py-4  flex justify-center"> Signup as a new user</h6>
    <div class="flex items-center justify-center  ">
        
        <form action="/users" method="post" class="bg-black p-6 rounded shadow-md w-80">
            <div class="py-3">
                <label class="ml-2 text-sm text-white cursor-pointer" for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" required class="mt-1 block w-full text-sm p-2 border border-gray-300 text-white bg-gray-900 rounded leading-5 focus:border-green-500 focus:ring-1 focus:ring-green-500">
            </div>
            
            <div class="py-3">
                <label class="ml-2 text-sm text-white cursor-pointer" for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" required class="mt-1 block w-full text-sm p-2 border border-gray-300 text-white bg-gray-900 rounded leading-5 focus:border-green-500 focus:ring-1 focus:ring-green-500">
            </div>
            
            <div class="py-3">
                <label class="ml-2 text-sm text-white cursor-pointer" for="email">Email</label>
                <input type="email" id="email" name="email" required class="mt-1 block w-full text-sm p-2 border border-gray-300 text-white bg-gray-900 rounded leading-5 focus:border-green-500 focus:ring-1 focus:ring-green-500">
            </div>
            
            <div class="py-3">
                <label class="ml-2 text-sm text-white cursor-pointer" for="password">Password</label>
                <input type="password" id="password" name="password" required class="mt-1 block w-full text-sm p-2 border border-gray-300 text-white bg-gray-900 rounded leading-5 focus:border-green-500 focus:ring-1 focus:ring-green-500">
            </div>
    
            <div class="py-3">
                <button class="bg-green-600 text-white px-5 py-2 rounded leading-5 font-medium w-full" type="submit">Sign up</button>
            </div>
        </form>
    </div>
    
           
   
    <div class="grid grid-cols-6">
        <divc class="col-start-3 col-span-2 ">
            <%- include('footer.ejs') %>
    </div>

   

</body>
</html>