                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if(response.ok){
                    window.location.reload();
                }
            }).catch(error => {
                console.error( error);
            });
        }

        function deleteTodo(id){
            fetch(`/todos/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if(response.ok){
